<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.sigmacall.sigma.SharingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_sharing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sigma_purple"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ui_invite"
            android:layout_gravity="center"
            android:textColor="#fff" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_standart_black"
            android:text="@string/ui_sharing_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />


        <GridLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:rowCount="1"
            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_column="0"/>


            <EditText
                style="@style/code_sharing"
                android:id="@+id/ed_sharing_code"
                android:enabled="false"
                android:inputType="text"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:layout_width="45dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_column="2" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btn_comeon"
                android:layout_marginTop="0dp"
                style="@style/btnLinkPromo"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/sigma_transparent"
                android:textSize="12dp"
                android:text="Придумать свой код"/>
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="1"
            android:columnCount="3"
            android:layout_marginTop="0dp">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="0"
                android:visibility="invisible"/>

            <TextView
                style="@style/textOrangeBold"
                android:id="@+id/tvShareCode"
                android:text="@string/ui_share_code"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivShareCode"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </GridLayout>

        <GridLayout
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_signup"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_purple"
                android:id="@+id/tv_signup"
                android:text="0"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_hum"
                android:gravity="left"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_earn"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_purple"
                android:id="@+id/tv_earn"
                android:text="0"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_rubl"
                android:gravity="left"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_bonus_balace"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_purple"
                android:id="@+id/tv_bonus"
                android:text="0"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_row="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_rubl"
                android:gravity="left"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </GridLayout>

        <GridLayout
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:rowCount="1"
            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                style="@style/txt_standart_black"
                android:text="@string/ui_status"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/txt_standart_purple"
                android:id="@+id/tv_status_value"
                android:text=""
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="fill"
                android:paddingLeft="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivShareStatus"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </GridLayout>

        <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_use_bonuses"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="200dp"
                style="@style/textOrangeBold"
                android:layout_height="60dp"
                android:text="@string/ui_use_bonuses"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>



