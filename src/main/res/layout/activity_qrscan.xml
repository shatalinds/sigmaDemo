<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.sigmacall.sigma.adapter.QRScanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_qrscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sigma_purple"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ui_account_scan"
            android:id="@+id/tv_scan"
            android:layout_gravity="center"
            android:textColor="#fff" />
    </android.support.v7.widget.Toolbar>

    <eu.livotov.labs.android.camview.ScannerLiveView
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
